# Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
# Provided by Render Postgres: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=

# JWT Configuration
# ⚠️ IMPORTANT: Set a strong random key in production (required)
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://redis:6379

# CORS Origins (comma-separated). Include your Render frontend URL.
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
